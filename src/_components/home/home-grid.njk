---
css: |
  .home-grid {
    list-style: none;
    margin-left: 0;
    display: grid;
    grid-auto-rows: 1fr;
    grid-gap: 0.5em;
    margin-bottom: 2em;
    margin-top: 2em;
    margin-left: 1.5em;
    grid-template-columns: repeat(3),minmax(min(100%, var(--auto-grid-min-size)), 1fr);
    font-size: 3.5vw;
  }

  @media only screen and (min-width: 30rem) {
    .home-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      font-size: 2vw;
    }
  }
  @media only screen and (min-width: 50rem) {
    .home-grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
      font-size: 1.4vw;
    }
  }
  /* Cap the max size of font in the panels */
  @media only screen and (min-width: 65rem) {
    .home-grid { font-size: 0.908rem; }
  }
  .home-grid > li {
    padding: 1em;
    background: #0C0C33;
    color: white;
    text-align: center;
    margin-bottom: 0;
  }
  .home-grid > li:focus {
    outline: 4px solid #061eff;
  }
  .home-grid > li > * {
    line-height: 1.2em;
  }
  .home-grid > li > span {
    display: block;
  }
---
<ul class="home-grid">
  {{ content | safe }}
</ul>