---
css: |
  .panels {
    list-style: none;
    margin-left: 0;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    grid-gap: 0.5em;
    margin-bottom: 2em;
  }
  .panels > li {
    padding: 1em;
    background: #0C0C33;
    color: white;
    text-align: center;
    margin-bottom: 0;
  }
---

<ul class="panels">
  {{ content | safe }}
</ul>