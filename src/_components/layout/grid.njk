---
css: |
  .grid {
    --auto-grid-min-size: 16rem;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(min(100%, var(--auto-grid-min-size)), 1fr));
    grid-gap: 1rem;
  }
  .grid > * {
    display: block;
  }
---
<{{ tag or 'div' }} class='grid {{ class }}'>
  {{ content | safe }}
</{{ tag or 'div' }}>
