  {% comp 'metric.panel' %}
    <span class="title">Engagements</span>
    <div class="number">{{ metrics.linkedin.monthly_updates.columns.engagements | sum | localize }}</div>
  {% endcomp %}  
  {% comp 'metric.panel' %}
    <span class="title">Comments</span>
    <div class="number">{{ metrics.linkedin.monthly_updates.columns.comments | sum  | localize }}</div>
  {% endcomp %}
  {% comp 'metric.panel' %}
    <span class="title">Reactions</span>
    <div class="number">{{ metrics.linkedin.monthly_updates.columns.reactions | sum | localize }}</div>
  {% endcomp %}
  {% comp 'metric.panel' %}
    <span class="title">Clicks</span>
